<% content_for :main do%>
<h1>Cadastro de Tarefa</h1>
<br/>

<%= error_messages_for :tarefa %>

<% form_for(@tarefa) do |f| %>

<p>
  <b>Projetos</b><br />   
  
  <%= f.select  :projeto_id, @projetos,{:prompt=>"Selecione uma Opção"}  %>      
</p>

  <p>
	<b>Descrição</b><br/>
	<%= f.text_area :descricao, :cols=>60, :rows=>10 %>
  </p>

  <p>
    <b>Situação</b><br />   
    
    <%= f.select :situacao_id,@situacaos,{:prompt=>"Selecione uma Opção"} %>      
  </p>


  <p>
    <b>Usuario</b><br />   
    
    <%= f.select :usuario_executor_id,@usuarios,{:prompt=>"Selecione uma Opção"} %>      
  </p>

  <p>
    <b>Tempo est</b><br />   
       
    <%= f.text_field :tempo_est %>     
  </p>

  <p>
    <b>Avaliacao</b><br />   
       
    <%= f.text_field :avaliacao %>     
  </p>

  <p>
    <%= f.submit "Cadastrar" %>
  </p>
<% end %>

<%= link_to 'Voltar', tarefas_path %>
<% end %>