<% content_for :rightside do %>
    <% nome_usuario = ''%>
    <% if @minhas_solicitacoes.empty? & @minhas_tarefas.empty? %>
    <div id="nome_usuario">
        Não há nenhuma tarefa direcionada pra você no momento. 
    </div>
    <% end %>
    <% for tarefa in @minhas_tarefas do  %>

      <% if nome_usuario!= tarefa.solicitante.nome then %>
        <div id="nome_usuario"><%= tarefa.solicitante.nome %> </div>
        <% nome_usuario = tarefa.solicitante.nome %> 
      <% end %>

    <div id="tarefa">
    
    <span id="blink_<%=tarefa.id.to_s %>" >
        <a href="#" onClick=toggle(<%= tarefa.id %>,<%= tarefa.alerta_usuario.nil? ? false : tarefa.alerta_usuario %>,'usuario') ><%= tarefa.descricao %></a>
    </span>
    <div style="display: none;"id="toggle_appear_<%= tarefa.id.to_s %>" style="background:#F2F2F2;">
    
        <table width="80" border="0" cellspacing="0" cellpadding="0">
                                      <tr>
        <td height= "30" ><p class="link"><a href="#" onClick="abre_form_recusa(<%=tarefa.id%>);return false;" style="text-decoration:none" OnMouseOver="document.devolver.src='images/backwardh.png'" OnMouseOut="document.devolver.src='images/backward.png'">
        <Img Src="images/backward.png" Name="devolver" Width="18" Height="10" Border=""><span>Devolver</span></a></p></td>
         
    
        <% if tarefa.pausada_esperando_aprovacao %>
<% #TODO o aue fazder se ele continua a tarefa antes de aprovar ou não a pausa ? %>
           <td height= "30" ><a href="#"><img src="/images/play.png" border=0 /></td>
        <% end %>

        <% if tarefa.pausada  %>
           <% rota = "/tarefas/reiniciar_a_tarefa?tarefa_id=" + tarefa.id.to_s  %>
    <td height= "30"><p class="link"> <a href=<%=rota%> style="text-decoration:none" OnMouseOver="document.play.src='images/pauseh.png'" OnMouseOut="document.play.src='images/play.png'"><Img Src="images/play.png" Name="play" Width="18" Height="10"Border=""><span>Pausar</span></a></p></td>
        <% end %>

        <% if tarefa.sem_pausa || tarefa.pausa_nao_aceita %>
          <td height= "30"><p class="link"> <a href="#" onClick="abre_form_pausa(<%=tarefa.id%>);return false;"  style="text-decoration:none" OnMouseOver="document.pause.src='images/pauseh.png'" OnMouseOut="document.pause.src='images/play.png'"><Img Src="images/play.png" Name="pause" Width="18" Height="10"Border=""><span>Pausar</span></a></p></td>
        <% end %>

<td height= "30" ><p class="link"><a Href="#" style="text-decoration:none" OnMouseOver="document.foward.src='images/fowardh.png'" OnMouseOut="document.foward.src='images/foward.png'"><Img Src="images/foward.png" Name="foward" Width="18" Height="10"Border=""><span>Reencaminhar</span></a></p></td>
    
       <td height= "30"><p class="link"> <a href="#" onClick="abre_form_termino(<%=tarefa.id%>);return false;" style="text-decoration:none" OnMouseOver="document.stop.src='images/stoph.png'" OnMouseOut="document.stop.src='images/stop.png'"><Img Src="images/stop.png" Name="stop" Width="18" Height="10"Border=""><span>Finalizar</span></a></p></td>


      
         </tr>
   </table>

        <%= render :partial=>'comentarios_de_uma_tarefa', :locals=>{:tarefa=>tarefa, :lado=>'direito'} %>
        <%= render :partial=>'form_comentario', :locals=>{:tarefa=>tarefa} %>    
    </div>
   <div style="display:none;" id="form_recusa_<%=tarefa.id.to_s%>">
       <%= render :partial=>'recusar', :locals=>{:tarefa=>tarefa} %>
   </div>


   <div style="display:none;" id="form_pausa_<%=tarefa.id.to_s%>">
      <%= render :partial=>'pausar', :locals=>{:tarefa=>tarefa, :lado=>'direito'} %>
   </div>

        <div style="display:none;" id="abre_termino_<%=tarefa.id.to_s%>">
             <%= render :partial=>'termino', :locals=>{:tarefa=>tarefa} %>
        </div>

    <% if tarefa.alerta_usuario %>
         <% tag = '#blink_'+tarefa.id.to_s %>
         <%= javascript_tag "pulsar('"+tag+"')" %>
       <% end %>
</div>
<% end %>

<% end %>
<br>