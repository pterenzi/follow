<% content_for :rightside do %>
    <% nome_usuario = ''%>
    <% if @minhas_solicitacoes.empty? %>
    <div id="nome_usuario">
        Não há nenhuma tarefa direcionada pra você no momento. 
    </div>
    <% end %>
    <% for tarefa in @minhas_tarefas do  %>
      <% if nome_usuario!= tarefa.solicitante.nome then %>
        <div id="nome_usuario"><%= tarefa.solicitante.nome %> </div>
        <% nome_usuario = tarefa.solicitante.nome %> 
      <% end %>
    <div id="tarefa">
		<%= tarefa.id %><br/>
	    <%= 'blink' if tarefa.alerta %>
        <a href="#" onClick="Effect.toggle('toggle_appear_<%= tarefa.id.to_s %>' , 'blind', { duration: 1.0 } ); return false;"><%= tarefa.descricao %></a><br/>
    <div style="display: none;"id="toggle_appear_<%= tarefa.id.to_s %>" style="background:#F2F2F2;">
        <%= select_tag :andamento_id, options_for_select(@andamentos) %><br/>
        <%= render :partial=>'comentarios_de_uma_tarefa', :locals=>{:tarefa=>tarefa, :lado=>'direito'} %>
        <%= render :partial=>'form_comentario', :locals=>{:tarefa=>tarefa} %>    
    </div>

    <% if tarefa.pausada_esperando_aprovacao %>
       esperando aprovação<a href="#"><img src="/images/pause.png"/>
    <% end %>

    <% if tarefa.pausada  %>
       pausada <a href="#"><img src="/images/pause.png"/></a>
    <% end %>
    
    <% if tarefa.sem_pausa %>
      em andamanto
    <a href="#" onClick="Effect.toggle('form_pausa_<%= tarefa.id.to_s %>' , 'blind', { duration: 1.0 } ); return false;"><img src="/images/play.png"/></a>
    <div style="display: none;"id="form_pausa_<%= tarefa.id.to_s %>" style="background:#F2F2F2;">
        <%= render :partial=>'pausar', :locals=>{:tarefa=>tarefa, :lado=>'direito'} %>
    </div>
    <% end %>
</div>
<% end %>

<% end %>