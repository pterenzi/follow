<% content_for :rightside do %>
    <% nome_usuario = ''%>
    <% if @minhas_solicitacoes.empty? %>
    <div id="nome_usuario">
        Não há nenhuma tarefa direcionada pra você no momento. 
    </div>
    <% end %>
    <% for tarefa in @minhas_tarefas do  %>
      <% if nome_usuario!= tarefa.solicitante.nome then %>
        <div id="nome_usuario"><%= tarefa.solicitante.nome %> </div>
        <% nome_usuario = tarefa.solicitante.nome %> 
      <% end %>
    <div id="tarefa">
	  <%= link_to tarefa.descricao, tarefa_url(tarefa.id) %>
        <%= 'blink' if tarefa.alerta %>
  
</div>
<% end %>

<% end %>