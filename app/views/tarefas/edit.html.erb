<% content_for :leftside do %>
   <%= render :partial=>"minhasSolicitacoes" %>
<% end %>
<% content_for :rightside do %>
  <%= render :partial=>"minhasTarefas" %>
<% end %>
<% content_for :main do %>
<h1>Alterar Tarefa</h1>

<%= error_messages_for :tarefa %>

<% form_for(@tarefa) do |f| %>
USUARIO_ID<%= @tarefa.usuario_id %>
<p>
   <b>Projetos</b><br />   
   
   <%= f.select :projeto_id,@projetos,{:prompt=>"Selecione uma Opção"} %>      
 </p>
  <p>
	<b>Descrição</b><br/>
	<%= f.text_area :descricao, :cols=>60, :rows=>10 , :disabled=>@tarefa.usuario_que_criou(@usuario.id) %>
  </p>
  
  <p>
    <b>Situação</b><br />   
    
    <%= f.select :situacao_id,@situacaos,{:prompt=>"Selecione uma Opção"} %>      
  </p>

  <p>
    <b>Delegado a </b><br />   
    
    <%= f.select "usuario_id",@usuarios,{:prompt=>"Selecione uma Opção"} %>      | <%=  @tarefa.usuario_id %>
  </p>

  <p>
    <b>Tempo est</b><br />   
       
    <%= f.text_field :tempo_est %>     
  </p>

  <p>
    <b>Avaliacao</b><br />   
       
    <%= f.text_field :avaliacao %>     
  </p>
  <br/>
  <p>
    <%= f.submit "Atualizar" %>
  </p>
<% end %>

<%= link_to 'Mostrar', @tarefa %> |
<%= link_to 'Voltar', tarefas_path %>
<% end %>