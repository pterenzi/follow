<% for task in @to_do_list do %>
<div id="task">
  <span id="blink_<%=task.id.to_s %>" >
  
    <a href="#" title="Detalhes da task" onClick="task_detail(<%= task.id %>);"><%= image_tag "info.png", :border=>0 %></a> <a href="#" onClick="toggle(<%= task.id %>, false ,'usuario')" ><span class="hyphenate" lang="pt"><%= task.description %></span></a>
 <div style="display:none;" id="detail_form_<%=task.id.to_s%>">
       <%= render :partial=>'tasks/task_details', :locals=>{:task=>task} %>
   </div>

  </span>
  <div style="display: none;"id="toggle_appear_<%= task.id.to_s %>" style="background:#f2f2f2;">
   <table>
	<tr>
		<td><p class="link"> <a href="#" onClick="abre_form_end(<%=task.id%>);return false;" style="text-decoration:none" OnMouseOver="document.stoptodo.src='images/stoph.png'" OnMouseOut="document.stoptodo.src='images/stop.png'"><Img Src="images/stop.png" Name="stop" Width="18" Height="10"Border=""><span>Finalizar</span></a></p>
  </td></tr></table>
    <%= render :partial=>'tasks/task_comments', :locals=>{:task=>task, :lado=>'direito'} %>
    <%= render :partial=>'tasks/comment_form', :locals=>{:task=>task} %>    
    
     <div style="display:none;" id="abre_end_<%=task.id.to_s%>">
         <%= render :partial=>'tasks/close_task', :locals=>{:task=>task} %>
     </div>
     
  </div>
</div>
<% end %>