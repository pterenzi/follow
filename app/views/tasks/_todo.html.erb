<% for task in @to_do_list do %>
<div id="task">
  <span id="blink_<%=task.id.to_s %>" >
  
    <a href="#" title="Detalhes da task" onClick="detalhe_task(<%= task.id %>);"><%= image_tag "info.png" %></a> <a href="#" onClick="toggle(<%= task.id %>, false ,'usuario')" ><span class="hyphenate" lang="pt"><%= task.descricao %></span></a>
 <div style="display:none;" id="form_detalhe_<%=task.id.to_s%>">
       <%= render :partial=>'detalhes_da_task', :locals=>{:task=>task} %>
   </div>

  </span>
  <div style="display: none;"id="toggle_appear_<%= task.id.to_s %>" style="background:#F2F2F2;">
   <table>
	<tr>
		<td><p class="link"> <a href="#" onClick="abre_form_termino(<%=task.id%>);return false;" style="text-decoration:none" OnMouseOver="document.stoptodo.src='images/stoph.png'" OnMouseOut="document.stoptodo.src='images/stop.png'"><Img Src="images/stop.png" Name="stop" Width="18" Height="10"Border=""><span>Finalizar</span></a></p>
  </td></tr></table>
    <%= render :partial=>'comentarios_de_uma_task', :locals=>{:task=>task, :lado=>'direito'} %>
    <%= render :partial=>'form_comentario', :locals=>{:task=>task} %>    
    
     <div style="display:none;" id="abre_termino_<%=task.id.to_s%>">
         <%= render :partial=>'termino', :locals=>{:task=>task} %>
     </div>
     
  </div>
</div>
<% end %>