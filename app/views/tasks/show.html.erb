<% content_for :leftside do %>
   <%= render :partial=>"minhasSolicitacoes" %>
<% end %>
<% content_for :rightside do %>
  <%= render :partial=>"minhasTasks" %>
<% end %>
<% content_for :lado_sem_usuario do %>
  <%= render :partial=>"tasks_sem_usuario"%>
<% end %>
<% content_for :main do%>
<h1>Detalhes Sobre Task</h1>
<br/>
<p/>
    <p>
        <b>Descrição:</b>
        <%= @task.descricao %>
    </p>
<p>
  <b>Situação:</b>
  <%=h @task.situacao.descricao %>
</p>

<p>
  <b>Projetos:</b>
  <%=h @task.projeto.descricao %>
</p>

<p>
    <b>Solicitante :</b>
    <%=h @task.solicitante.login %>
</p>
<p>
  <b>Delegado a:</b>
  <%=h @task.user.nome unless @task.user.nil? %>
</p>

<p>
    <b>Tempo estimado:</b>
    <%=h @task.tempo_est %> |
    <%= render :partial=>"situacao_da_pausa" %>
</p>


<p>
  <b>Avaliação:</b>
  <%=h @task.avaliacao %>
</p>

<p>
    <b>Aberto em</b>
    <%= @task.created_at %>
</p>

<!-- 
<%= link_to 'Alterar', edit_task_path(@task) %> |
<%= link_to 'Voltar', tasks_path %>
-->
</p>
<br/>

 <%= render :partial=>'form_comentario', :locals=>{:task=>@task} %>
    <%= render :partial=>'comentarios_de_uma_task', :locals=>{:task=>@task, :lado=>'direito'} %>


<br/>
<div style="display: none;" id="pausar" style="background:#F2F2F2;">
    <%= render :partial=>'pausar', :locals=>{:task=>@task} %>
</div>
<br/>
<div style="display: none;" id="aprovar_reprovar" style="background:#F2F2F2;">
    <%= render :partial=>'aprovar_reprovar_pausa', :locals=>{:task=>@task} %>
</div>


<% end %>