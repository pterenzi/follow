<% content_for :rightside do %>
    <% user_name = ''%>
    <div id="user_name" class="user_name">
    <% if  @my_tasks.empty? %>
      <%=t(:no_task)%> 
    <% end %>
    </div>
    <% user_name = '' %>
    <% for task in @my_tasks do  %>
      <% if user_name!= task.requestor.name then %>
        <% if !user_name.blank? %>
          <span id="last_task_for_user_<%= user_name %>"></span>
        <% end %>
        <%= render :partial=>"tasks/user_name", :locals=>{:task=>task} %>
        <% user_name = task.requestor.name %> 
      <% end %>
      <%= render :partial=>"tasks/task", :locals=>{:task=>task} %>
    <% end %>
    <% if !user_name.blank? %>
      <span id="last_task_for_user_<%= user_name %>"></span>
    <% end %>
<% end %>
<br>