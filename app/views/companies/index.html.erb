<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><%= t(:companies) %></h1>

<table width="520">
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:active) %></th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>

<% for company in @companies %>
  <tr>
    <td><%=h company.name %></td>
    <td><%=h company.active %></td>
    <td width="20"><%= link_to image_tag("info.png", :size=>"16x16", :border=>0), company %></td>
    <td width="20"><%= link_to image_tag("edit.png", :size=>"16x16", :border=>0), edit_company_path(company) %></td>
    <td width="20"><%= link_to image_tag("trash.png",:size=>"16x16", :border=>0), company, :confirm => t('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new) + t(:company), new_company_path %>
<% end %>