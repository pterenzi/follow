<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><%= t(:listing) +  t(:companies) %></h1>

<table>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:active) %></th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>

<% for company in @companies %>
  <tr>
    <td><%=h company.name %></td>
    <td><%=h company.active %></td>
    <td><%= link_to t(:show), company %></td>
    <td><%= link_to t(:edit), edit_company_path(company) %></td>
    <td><%= link_to t(:destroy), company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new) + t(:company), new_company_path %>
<% end %>