<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><%= t(:editing).capitalize + t(:company) %> </h1>

<% form_for @company, :html=>{:class=>"jNice"} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t(:name) %><br/>
    <%= f.text_field h(:name) %>
  </p>
  <br/><br>
  <p>
    <%= f.check_box :active %> &nbsp; <%= f.label t(:active) %>
  </p>
<br />
  <p>
	 <%= link_to t(:back), companies_path, :class => "awesome small blue button" %> 
	 <%= link_to t(:show), @company, :class => "awesome small blue button"%>
     <%= f.submit t(:update), :class => "awesome small blue button" %> 

  </p>
<% end %>
<br/>



<% end %>
