<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><%= t(:editing).capitalize + t(:company) %> </h1>
<form class="jqtransform">
<% form_for(@company) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t(:name) %><br/>
    <%= f.text_field h(:name) %>
  </p>
  <br/>
  <p>
    <%= f.check_box :active %> &nbsp; <%= f.label :active %>
  </p><br />
  <p>
     <%= f.submit t(:update) %> 
  </p>
<% end %>
<br/>
 <%= link_to t(:show), @company %> 
 <%= link_to t(:back), companies_path %> 

<% end %>
</form>