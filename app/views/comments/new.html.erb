<h1>New comment</h1>
<%= @task.description %>

<% form_for @comment, :html=>{:class=>"jNice"}do |f| %>
  <%= f.error_messages %>
 <%= f.hidden_field :task_id %>
  <p>
    <%= f.label :usuario_id %><br />
   <%= f.select :usuario_id,@users,{:prompt=>"Selecione uma Opção"} %>     
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field h(:description) %>
  </p>
  <p>
    <%= f.submit t(:create) %>
  </p>
<% end %>

<%= link_to t(:back), comments_path %>
