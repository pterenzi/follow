<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1>Listing comments</h1>

<table>
  <tr>
    <th>Usuario</th>
    <th>Descricao</th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.usuario_id %></td>
    <td><%=h comment.description %></td>
    <td><%= link_to t(:show), comment %></td>
    <td><%= link_to t(:edit), edit_comment_path(comment) %></td>
    <td><%= link_to t(:destroy), comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path %>

<% end %>