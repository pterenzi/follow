      <span class="hyphenate" lang="pt"> â€¢ <%= f.submit "#{event.content}", :url=>edit_event_path(event), :method=>:get %></span><br/><br>
    <% end %> 
    </td>
   <% date += 1.day %>
   <% if date.wday==0 %>
     </tr>
	 <% if date.month == first_day.month %>
	   <tr height="40">
	 <% end %>
    
  <% end %>  
<% end %>
