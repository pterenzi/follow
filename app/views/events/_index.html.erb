<tr height="25px" >
	<% I18n.t('date.day_names').each do |day| %>
	  <th><%= day %></th>
	<% end %>
<tr height="40px">
	<% (1..wday).each do |wd|  %>
    	<td>&nbsp;</td>
    <% end %>
    
<% date = first_day %>

<% while date.month == first_day.month do %>
 
    <% events = Event.by_date(date,current_user.id)%>  

    <% if date.to_s == Date.today.to_s %>
      <% color = "#fffac2"%>
    <% else %>
      <% color = "#ffffff"%>
    <% end %>
	<td width="120" bgcolor = <%=color%> valign="top" >
    <%= f.submit date.day.to_s,:url=>new_event_path(:date=>date), :method=>:get %> <br/>
