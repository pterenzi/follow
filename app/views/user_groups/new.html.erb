<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1>New user_group</h1>

<% form_for(@user_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', user_groups_path %>
<% end %>