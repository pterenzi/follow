<% content_for :leftside do %>
   <%= render :partial=>"tasks/my_requests" %>
<% end %>
<% content_for :rightside do %>
  <%= render :partial=>"tasks/my_tasks" %>
<% end %>
<% content_for :main do %>
<h1><%= t(:editing).capitalize + " " + t(:project) %></h1>
<form class="jqtransform">

<% form_for(@project) do |f| :class %>
  <%= f.error_messages %>

  <p>
    <%= f.label t(:name) %><br />
    <%= f.text_field h(:name) %>
  </p>
  <br/>
  <p>
    <%= f.check_box :active %>
    <%= f.label :active %>
  </p>
  <br/><br/><br/>

  <p>
	<%= link_to t(:back), projects_path , :class=> 'awesome large blue button'%>
	<%= link_to t(:show), @project , :class=> 'awesome large blue button' %> 
    <%=f.submit t(:update), :class=> 'awesome large blue button' %>

  </p>
<% end %>
<br/>




<% end %>
</form>