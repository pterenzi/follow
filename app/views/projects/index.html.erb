<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><span> <%= t(:projects) %></span></h1>

<table width="520">
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:active) %></th>
    <th width="20px">&nbsp;</th>
    <th width="20px">&nbsp;</th>
    <th width="20px">&nbsp;</th>
  </tr>

<% for project in @projects %>
  <tr>
    <td><%=h project.name %></td>
    <td><%=h project.active %></td>
    <td align="right"><%= link_to image_tag("info.png", :size=>"16x16", :border=>0), project %></td>
    <td align="center"><%= link_to image_tag("edit.png", :size=>"16x16", :border=>0), edit_project_path(project) %></td>
    <td align="left"><%= link_to image_tag("trash.png",:size=>"16x16", :border=>0), project, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_project), new_project_path, :class => 'awesome large blue button' %>
<% end %>