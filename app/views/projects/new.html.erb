<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><%= t(:new) +  " " + t(:project) %></h1>
<form class="jqtransform">
<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t(:name) %><br />
    <%= f.text_field h(:name) %>
  </p>
  <br/>
  <p>
    <%= f.check_box :active %>&nbsp;
    <%= f.label t(:active) %>
  </p>
  <p>
	</form>
	<br/>
	<br/>
	 <%= link_to t(:back), projects_path, :class => 'awesome large blue button' %> 
    <%= f.submit t(:save), :class => 'awesome large blue button'%>
  </p>
<% end %>
<br/>

<% end  %>
