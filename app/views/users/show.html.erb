<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><%= t("user").capitalize %> </h1>

<form class="jqtransform"> <p>
  <b>Login:</b>
  <%=h @user.login %>
</p>
 
<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>
 
<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>
 
<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>
 
<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>
 
<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>
 
<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>
<br/>
<p>
  <b><%= t(:user_group)%>:</b>
  <br/>
  <% current_user.user_groups.each do |ug| %>
    &nbsp;&nbsp;&nbsp;<%= ug.name %><br/>
  <% end %>
</p>
 
 <br/>

<%= link_to t(:back), :back, :class => "awesome large blue button"%>
 <%= link_to t(:edit), edit_user_path(@user), :class => 'awesome large blue button' %>

<% end %>
</form>
