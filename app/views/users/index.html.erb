<% content_for :main do %>
<h1><%= t(:users) %></h1>
<table width="520" border="0">
  <tr>
	<th width="80"><%= t(:login) %></th>
	<th width="110"><%= t(:name) %></th>
	<th 	><%= t(:company) %></th>
	<th width="90"><%=t(:role)%></th>
	<th width="20">&nbsp;</th>
	<th width="20">&nbsp;</th>
	<th width="20">&nbsp;</th>
  </tr>
<% for user in @users do %>
  <tr>
	<td>â€¢ <%=h user.login %></td>
	<td><%=h user.name %></td>
