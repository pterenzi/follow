<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h1><%= t(:listing) + t(:users) %></h1>
<table border="0">
  <tr>
	<th width="80"><%= t(:login) %></th>
	<th width="110"><%= t(:name) %></th>
	<th width="110"><%= t(:company) %></th>
	<th width="90"><%=t(:category)%></th>
	<th>&nbsp;</th>
	<th>&nbsp;</th>
	<th>&nbsp;</th>
  </tr>
<% for user in @users do %>
  <tr>
	<td><%=h user.login %></td>
	<td><%=h user.name %></td>
	<td><%=h user.company.name unless user.company.nil? %></td>
	<td><%= link_to user.category.name, edit_category_path(user.category) %></td>
	<td><%= link_to t(:show), user %></td>
    <td><%= link_to t(:edit), edit_user_path(user) %></td>
    <td><%= link_to t(:destroy), user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br/>
<%= link_to t(:new) + t(:user) , new_user_path() unless @client.license_full %>
<%= @client.available_license %> <%= t(:available_licenses)%>
<% end %>