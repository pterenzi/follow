<%= render :partial=>"layouts/moldura" %>
<% content_for :main do %>
<h2><%= t(:edit).capitalize + " "  +t(:user) %></h2>
 <br/>
<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />

  <%= f.label t(:name) %><br />
  <%= f.text_field :name %><br />
  <br />
  <% if current_user.category.name.downcase=="gestor"%>
    <%= f.label t(:category) %><br/>
    <%= f.select :category_id, @categories %><br/>
    <br/>
  <% end %>
<%= f.label t(:company) %><br/>
<%= f.select :company_id, @companies %>
<br/>
<br/>
  <%= f.submit t(:update) %>
<% end %>
 
<br />
<%= link_to t(:back), users_path %> |
<%= link_to t(:change_password) , change_password_user_path(@user) %>
<% end %>