<%   require 'brazilian-rails'  %>
<form class="jqtransform"> 
<% form_for(@message, :html => { :multipart => true }) do |f| %>
   <div class="depot-form">
     <fieldset>
       <p>
         <legend> <%=  @formulario_label  %> </legend>
       </p>
    
       <p>
         <label for="message_name">Nome:</label>
         <%= f.text_field h(:name), :size =>  "55" %>     
       </p>

       <p>
         <%= f.submit  @submit_label, :class => "submit"  %>
       </p><br/>
    
     </fieldset>
   </div> 
<% end %>
</form>