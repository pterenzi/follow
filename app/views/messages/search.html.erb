<% content_for :main do %>
Searching messages<br/>

<% form_tag search_messages_path() do  %>
  <%= t(:content) %>
  <%= text_field_tag :content, params[:content] %><br/>
  <%= t(:users) %>
  <%= select_tag :written_by,  options_for_select(@users) %><br/>
  <%= t(:the_date) %>  
  <%= select_month Date.today, :prefix=>:month , :include_blank=>true %>
  <%= select_year Date.today, :prefix=>:year , :include_blank=>true %><br/>

<br/>
  <%= submit_tag t(:search) %>

<% end %>

<% for message in @messages%>
  <%= message.content %>, enviada por <%= message.written_by.name %> Ã s <%= message.created_at.strftime("%d/%m  %H:%M") %><br/>
<% end %>

<% end %>