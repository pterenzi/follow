<% content_for :main do %>
Searching messages<br/>

<% form_tag search_messages_path() do  %>
  <%= t(:content) %>
  <%= text_field_tag :content, params[:content] %><br/>
  <%= t(:users) %>
  
<%= select "user", "user_id", @users, :include_blank=>true %><br/>
  <%= t(:the_date) %>  
  <%= select_month Date.today , :include_blank=>true %>
  <%= select_year Date.today , :date=>params[:date],:include_blank=>true %><br/>

<br/>
  <%= submit_tag t(:search), :name=>nil %>

<% end %>

